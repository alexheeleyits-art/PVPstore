{% liquid
  assign sweet_url = section.settings.sweet_link | default: '#'
  assign savoury_url = section.settings.savoury_link | default: '#'
%}

<section
  class="battle-hero color-{{ section.settings.color_scheme }}"
  data-battle-hero
  data-endpoint="{{ section.settings.endpoint | escape }}"
  data-poll-min="{{ section.settings.poll_min | times: 1000 }}"
  data-poll-max="{{ section.settings.poll_max | times: 1000 }}"
  data-end-date="{{ section.settings.end_date | escape }}"
  data-locale="{{ request.locale.iso_code | default: 'en-GB' }}"
  data-currency="{{ cart.currency.iso_code | default: shop.currency }}"
>
  <div class="battle-hero__stage">
    <div class="battle-hero__side battle-hero__side--sweet">
      <div class="battle-hero__side-inner">
        <p class="battle-hero__side-label">{{ section.settings.sweet_label }}</p>
        <p class="battle-hero__side-revenue" data-battle-sweet-revenue>0</p>
      </div>
    </div>

    <div class="battle-hero__side battle-hero__side--savoury">
      <div class="battle-hero__side-inner">
        <p class="battle-hero__side-label">{{ section.settings.savoury_label }}</p>
        <p class="battle-hero__side-revenue" data-battle-savoury-revenue>0</p>
      </div>
    </div>

    <div class="battle-hero__overlay" aria-live="polite">
      <div class="battle-hero__overlay-inner">
        <p class="battle-hero__eyebrow">{{ section.settings.eyebrow }}</p>
        <h2 class="battle-hero__title">{{ section.settings.heading }}</h2>
        <p class="battle-hero__tagline" data-battle-countdown>{{ section.settings.subheading }}</p>
        <p class="battle-hero__leader" data-battle-headline>Awaiting the first strike...</p>

        <div class="battle-hero__scoreboard">
          <div class="battle-hero__percent battle-hero__percent--sweet">
            <div class="battle-hero__percent-value" data-battle-sweet-percent>50%</div>
            <div class="battle-hero__team">{{ section.settings.sweet_label }}</div>
            <div class="battle-hero__team-revenue" data-battle-sweet-revenue>0</div>
          </div>

          <div class="battle-hero__bar" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="50">
            <span class="battle-hero__bar-fill" data-battle-bar></span>
            <span class="battle-hero__bar-label">Live score bar</span>
          </div>

          <div class="battle-hero__percent battle-hero__percent--savoury">
            <div class="battle-hero__percent-value" data-battle-savoury-percent>50%</div>
            <div class="battle-hero__team">{{ section.settings.savoury_label }}</div>
            <div class="battle-hero__team-revenue" data-battle-savoury-revenue>0</div>
          </div>
        </div>

        <div class="battle-hero__cta-row">
          <a class="button battle-hero__cta" href="{{ sweet_url }}">{{ section.settings.sweet_button_label }}</a>
          <a class="button button-secondary battle-hero__cta" href="{{ savoury_url }}">{{ section.settings.savoury_button_label }}</a>
        </div>
      </div>
    </div>

    <div class="battle-hero__lock" data-battle-lock hidden>
      <div class="battle-hero__lock-inner">
        Battle Over - Winner: <span data-battle-winner>Pending</span>
      </div>
    </div>
  </div>
</section>

{% style %}
  #shopify-section-{{ section.id }} .battle-hero {
    --battle-gap: clamp(16px, 2vw, 28px);
    --battle-border: rgb(var(--color-border-rgb) / 0.2);
    --battle-sweet: rgb(var(--color-foreground-rgb) / 0.1);
    --battle-savoury: rgb(var(--color-foreground-rgb) / 0.2);
    --battle-bar: rgb(var(--color-foreground-rgb));

    position: relative;
    overflow: hidden;
    background: var(--color-background);
    color: var(--color-foreground);
  }

  #shopify-section-{{ section.id }} .battle-hero__stage {
    min-height: 100svh;
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    position: relative;
  }

  #shopify-section-{{ section.id }} .battle-hero__side {
    position: relative;
    padding: clamp(32px, 6vw, 64px) clamp(20px, 4vw, 56px);
    display: flex;
    align-items: flex-end;
  }

  #shopify-section-{{ section.id }} .battle-hero__side--sweet {
    background: linear-gradient(135deg, var(--battle-sweet), transparent 70%);
    border-right: 1px solid var(--battle-border);
  }

  #shopify-section-{{ section.id }} .battle-hero__side--savoury {
    background: linear-gradient(225deg, var(--battle-savoury), transparent 70%);
  }

  #shopify-section-{{ section.id }} .battle-hero__side-inner {
    display: grid;
    gap: 10px;
    max-width: 280px;
  }

  #shopify-section-{{ section.id }} .battle-hero__side-label {
    font-size: 0.95rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
  }

  #shopify-section-{{ section.id }} .battle-hero__side-revenue {
    font-size: clamp(1.6rem, 3vw, 2.2rem);
    font-weight: 700;
  }

  #shopify-section-{{ section.id }} .battle-hero__overlay {
    position: absolute;
    inset: 0;
    display: grid;
    place-items: center;
    padding: clamp(20px, 4vw, 48px);
    text-align: center;
    pointer-events: none;
  }

  #shopify-section-{{ section.id }} .battle-hero__overlay-inner {
    max-width: 720px;
    display: grid;
    gap: 12px;
    pointer-events: auto;
  }

  #shopify-section-{{ section.id }} .battle-hero__eyebrow {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
  }

  #shopify-section-{{ section.id }} .battle-hero__title {
    font-size: clamp(2.4rem, 5vw, 4rem);
    margin: 0;
  }

  #shopify-section-{{ section.id }} .battle-hero__tagline {
    font-size: 1rem;
    letter-spacing: 0.06em;
    text-transform: uppercase;
  }

  #shopify-section-{{ section.id }} .battle-hero__leader {
    font-size: clamp(1.2rem, 2.5vw, 2rem);
    font-weight: 700;
  }

  #shopify-section-{{ section.id }} .battle-hero__scoreboard {
    display: grid;
    grid-template-columns: minmax(0, 1fr) minmax(120px, 2fr) minmax(0, 1fr);
    align-items: center;
    gap: 16px;
    margin-top: 12px;
  }

  #shopify-section-{{ section.id }} .battle-hero__percent {
    display: grid;
    gap: 4px;
    justify-items: center;
    font-size: 0.9rem;
  }

  #shopify-section-{{ section.id }} .battle-hero__percent-value {
    font-size: clamp(1.4rem, 3vw, 2.2rem);
    font-weight: 700;
  }

  #shopify-section-{{ section.id }} .battle-hero__bar {
    position: relative;
    height: 18px;
    border-radius: 999px;
    background: rgb(var(--color-foreground-rgb) / 0.12);
    overflow: hidden;
  }

  #shopify-section-{{ section.id }} .battle-hero__bar-fill {
    position: absolute;
    inset: 0 auto 0 0;
    width: 50%;
    background: linear-gradient(90deg, var(--battle-bar), rgb(var(--color-foreground-rgb) / 0.6));
    transition: width 900ms var(--ease-out-cubic, ease);
  }

  #shopify-section-{{ section.id }} .battle-hero__bar-label {
    position: absolute;
    inset: 0;
    display: grid;
    place-items: center;
    font-size: 0.7rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: rgb(var(--color-background-rgb));
  }

  #shopify-section-{{ section.id }} .battle-hero__cta-row {
    display: flex;
    justify-content: center;
    gap: 16px;
    flex-wrap: wrap;
    margin-top: 12px;
  }

  #shopify-section-{{ section.id }} .battle-hero__cta {
    min-width: min(220px, 100%);
  }

  #shopify-section-{{ section.id }} .battle-hero__lock {
    position: absolute;
    inset: 0;
    display: grid;
    place-items: center;
    background: rgb(var(--color-background-rgb) / 0.85);
    text-align: center;
    font-size: clamp(1.6rem, 4vw, 3rem);
    font-weight: 700;
    z-index: var(--layer-overlay);
  }

  #shopify-section-{{ section.id }} .battle-hero.is-locked .battle-hero__stage {
    pointer-events: none;
    filter: grayscale(0.2);
  }

  #shopify-section-{{ section.id }} .battle-hero.is-leading-sweet .battle-hero__side--sweet::after,
  #shopify-section-{{ section.id }} .battle-hero.is-leading-savoury .battle-hero__side--savoury::after {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 30% 30%, rgb(var(--color-foreground-rgb) / 0.15), transparent 65%);
    animation: battlePulse 2.4s ease-in-out infinite;
    pointer-events: none;
  }

  @keyframes battlePulse {
    0%,
    100% {
      opacity: 0.2;
    }
    50% {
      opacity: 0.6;
    }
  }

  @media screen and (max-width: 749px) {
    #shopify-section-{{ section.id }} .battle-hero__stage {
      grid-template-columns: 1fr;
    }

    #shopify-section-{{ section.id }} .battle-hero__side {
      align-items: flex-start;
    }

    #shopify-section-{{ section.id }} .battle-hero__side--sweet {
      border-right: none;
      border-bottom: 1px solid var(--battle-border);
    }

    #shopify-section-{{ section.id }} .battle-hero__scoreboard {
      grid-template-columns: 1fr;
    }

    #shopify-section-{{ section.id }} .battle-hero__bar-label {
      color: var(--color-foreground);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    #shopify-section-{{ section.id }} .battle-hero__bar-fill {
      transition: none;
    }

    #shopify-section-{{ section.id }} .battle-hero.is-leading-sweet .battle-hero__side--sweet::after,
    #shopify-section-{{ section.id }} .battle-hero.is-leading-savoury .battle-hero__side--savoury::after {
      animation: none;
    }
  }
{% endstyle %}

<script src="{{ 'battle.js' | asset_url }}" defer></script>

{% schema %}
