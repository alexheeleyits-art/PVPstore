{% liquid
  assign sweet_url = section.settings.sweet_link | default: '#'
  assign savoury_url = section.settings.savoury_link | default: '#'
%}

<section
  class="battle-hero color-{{ section.settings.color_scheme }}"
  data-battle-hero
  data-endpoint="{{ section.settings.endpoint | escape }}"
  data-poll-min="{{ section.settings.poll_min | times: 1000 }}"
  data-poll-max="{{ section.settings.poll_max | times: 1000 }}"
  data-end-date="{{ section.settings.end_date | escape }}"
  data-locale="{{ request.locale.iso_code | default: 'en-GB' }}"
  data-currency="{{ cart.currency.iso_code | default: shop.currency }}"
  data-sweet-name="{{ section.settings.sweet_label | escape }}"
  data-savoury-name="{{ section.settings.savoury_label | escape }}"
>
  <div class="battle-hero__stage">
    <div class="battle-hero__side battle-hero__side--sweet">
      <div class="battle-hero__side-inner">
        <p class="battle-hero__side-label">{{ section.settings.sweet_label }}</p>
      </div>
      {% if section.settings.sweet_image != blank %}
        <div class="battle-hero__side-media battle-hero__side-media--sweet">
          {{
            section.settings.sweet_image
            | image_url: width: 900
            | image_tag: class: 'battle-hero__side-image', loading: 'lazy'
          }}
        </div>
      {% endif %}
    </div>

    <div class="battle-hero__side battle-hero__side--savoury">
      <div class="battle-hero__side-inner">
        <p class="battle-hero__side-label">{{ section.settings.savoury_label }}</p>
      </div>
      {% if section.settings.savoury_image != blank %}
        <div class="battle-hero__side-media battle-hero__side-media--savoury">
          {{
            section.settings.savoury_image
            | image_url: width: 900
            | image_tag: class: 'battle-hero__side-image', loading: 'lazy'
          }}
        </div>
      {% endif %}
    </div>

    <div class="battle-hero__overlay" aria-live="polite">
      <div class="battle-hero__overlay-inner">
        <p class="battle-hero__eyebrow">{{ section.settings.eyebrow }}</p>
        <h2 class="battle-hero__title">{{ section.settings.heading }}</h2>
        <p class="battle-hero__tagline" data-battle-countdown>{{ section.settings.subheading }}</p>
        <p class="battle-hero__leader" data-battle-headline>Awaiting the first strike...</p>
        <div class="battle-hero__loading" data-battle-loading hidden>Loading live scores...</div>

        <div class="battle-hero__status-row">
          <div class="battle-hero__status battle-hero__status--sweet">
            <span class="battle-hero__status-label">{{ section.settings.sweet_label }}</span>
            <span class="battle-hero__status-text" data-battle-sweet-status>Sweet takes the lead</span>
          </div>
          <div class="battle-hero__status battle-hero__status--savoury">
            <span class="battle-hero__status-label">{{ section.settings.savoury_label }}</span>
            <span class="battle-hero__status-text" data-battle-savoury-status>Savoury fighting back</span>
          </div>
        </div>

        <div class="battle-hero__scoreboard">
          <div class="battle-hero__percent battle-hero__percent--sweet">
            <div class="battle-hero__percent-value" data-battle-sweet-percent>50%</div>
            <div class="battle-hero__team">{{ section.settings.sweet_label }}</div>
          </div>

          <div class="battle-hero__bar-frame">
            <div class="battle-hero__bar-header">Live battle progress</div>
            <div class="battle-hero__bar" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="50">
              <span class="battle-hero__bar-fill" data-battle-bar></span>
              <span class="battle-hero__bar-metric battle-hero__bar-metric--sweet">
                <span data-battle-sweet-percent>50%</span>
              </span>
              <span class="battle-hero__bar-vs">vs</span>
              <span class="battle-hero__bar-metric battle-hero__bar-metric--savoury">
                <span data-battle-savoury-percent>50%</span>
              </span>
            </div>
          </div>

          <div class="battle-hero__percent battle-hero__percent--savoury">
            <div class="battle-hero__percent-value" data-battle-savoury-percent>50%</div>
            <div class="battle-hero__team">{{ section.settings.savoury_label }}</div>
          </div>
        </div>

        <div class="battle-hero__cta-row">
          <a class="button battle-hero__cta" href="{{ sweet_url }}">{{ section.settings.sweet_button_label }}</a>
          <a class="button button-secondary battle-hero__cta" href="{{ savoury_url }}">{{ section.settings.savoury_button_label }}</a>
        </div>
      </div>
    </div>

    <div class="battle-hero__lock" data-battle-lock hidden>
      <div class="battle-hero__lock-inner">
        Battle Over - Winner: <span data-battle-winner>Pending</span>
      </div>
    </div>
  </div>
</section>

{% style %}
  #shopify-section-{{ section.id }} .battle-hero {
    --battle-gap: clamp(16px, 2vw, 28px);
    --battle-border: rgb(var(--color-border-rgb) / 0.2);
    --battle-sweet: #f7dfe4;
    --battle-savoury: #f7ead8;
    --battle-sweet-bar: #d98c9b;
    --battle-savoury-bar: #d3a56f;
    --battle-bar-border: #c7b39d;
    --battle-panel: #f8efe3;

    position: relative;
    overflow: hidden;
    background: var(--color-background);
    color: var(--color-foreground);
  }

  #shopify-section-{{ section.id }} .battle-hero__stage {
    min-height: 100svh;
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    position: relative;
  }

  #shopify-section-{{ section.id }} .battle-hero__side {
    position: relative;
    padding: clamp(32px, 6vw, 64px) clamp(20px, 4vw, 56px);
    display: flex;
    align-items: flex-end;
  }

  #shopify-section-{{ section.id }} .battle-hero__side--sweet {
    background: linear-gradient(135deg, var(--battle-sweet), transparent 70%);
    border-right: 1px solid var(--battle-border);
  }

  #shopify-section-{{ section.id }} .battle-hero__side--savoury {
    background: linear-gradient(225deg, var(--battle-savoury), transparent 70%);
  }

  #shopify-section-{{ section.id }} .battle-hero__side-inner {
    display: grid;
    gap: 10px;
    max-width: 280px;
  }

  #shopify-section-{{ section.id }} .battle-hero__side-media {
    position: absolute;
    bottom: 0;
    width: min(42%, 320px);
    pointer-events: none;
  }

  #shopify-section-{{ section.id }} .battle-hero__side-media--sweet {
    left: clamp(12px, 3vw, 36px);
  }

  #shopify-section-{{ section.id }} .battle-hero__side-media--savoury {
    right: clamp(12px, 3vw, 36px);
  }

  #shopify-section-{{ section.id }} .battle-hero__side-image {
    width: 100%;
    height: auto;
    display: block;
  }

  #shopify-section-{{ section.id }} .battle-hero__side-label {
    font-size: 0.95rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
  }

  #shopify-section-{{ section.id }} .battle-hero__side-revenue {
    font-size: clamp(1.6rem, 3vw, 2.2rem);
    font-weight: 700;
  }

  #shopify-section-{{ section.id }} .battle-hero__overlay {
    position: absolute;
    inset: 0;
    display: grid;
    place-items: center;
    padding: clamp(20px, 4vw, 48px);
    text-align: center;
    pointer-events: none;
  }

  #shopify-section-{{ section.id }} .battle-hero__overlay-inner {
    max-width: 720px;
    display: grid;
    gap: 12px;
    pointer-events: auto;
  }

  #shopify-section-{{ section.id }} .battle-hero__eyebrow {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
  }

  #shopify-section-{{ section.id }} .battle-hero__title {
    font-size: clamp(2.4rem, 5vw, 4rem);
    margin: 0;
  }

  #shopify-section-{{ section.id }} .battle-hero__tagline {
    font-size: 1rem;
    letter-spacing: 0.06em;
    text-transform: uppercase;
  }

  #shopify-section-{{ section.id }} .battle-hero__leader {
    font-size: clamp(1.2rem, 2.5vw, 2rem);
    font-weight: 700;
  }

  #shopify-section-{{ section.id }} .battle-hero__loading {
    display: none;
    align-items: center;
    gap: 10px;
    font-size: 0.7rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
  }

  #shopify-section-{{ section.id }} .battle-hero__loading::before {
    content: '';
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: 2px solid rgb(var(--color-foreground-rgb) / 0.6);
    border-right-color: transparent;
    animation: battleSpin 0.8s linear infinite;
  }

  #shopify-section-{{ section.id }} .battle-hero.is-loading .battle-hero__loading {
    display: inline-flex;
  }

  #shopify-section-{{ section.id }} .battle-hero__status-row {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 16px;
    text-transform: uppercase;
    letter-spacing: 0.14em;
    font-size: 0.8rem;
    transition: opacity 250ms ease, transform 250ms ease;
  }

  #shopify-section-{{ section.id }} .battle-hero__status {
    display: grid;
    gap: 6px;
    padding: 10px 14px;
    border: 1px solid var(--battle-border);
    background: rgb(var(--color-foreground-rgb) / 0.04);
  }

  #shopify-section-{{ section.id }} .battle-hero__status--savoury {
    text-align: right;
  }

  #shopify-section-{{ section.id }} .battle-hero__status-text {
    font-weight: 600;
    letter-spacing: 0.08em;
  }

  #shopify-section-{{ section.id }} .battle-hero__scoreboard {
    display: grid;
    grid-template-columns: minmax(0, 1fr) minmax(240px, 2.4fr) minmax(0, 1fr);
    align-items: center;
    gap: 16px;
    margin-top: 12px;
    transition: opacity 250ms ease, transform 250ms ease;
  }

  #shopify-section-{{ section.id }} .battle-hero__percent {
    display: grid;
    gap: 4px;
    justify-items: center;
    font-size: 0.9rem;
    min-width: 120px;
  }

  #shopify-section-{{ section.id }} .battle-hero__percent-value {
    font-size: clamp(1.4rem, 3vw, 2.2rem);
    font-weight: 700;
  }

  #shopify-section-{{ section.id }} .battle-hero__bar-frame {
    display: grid;
    gap: 8px;
    padding: 10px;
    border-radius: 14px;
    border: 1px solid var(--battle-bar-border);
    background: var(--battle-panel);
    justify-self: center;
    width: min(520px, 100%);
  }

  #shopify-section-{{ section.id }} .battle-hero__bar-header {
    font-size: 0.7rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
  }

  #shopify-section-{{ section.id }} .battle-hero__bar {
    position: relative;
    height: 56px;
    border-radius: 8px;
    background: var(--battle-savoury-bar);
    border: 2px solid var(--battle-bar-border);
    overflow: hidden;
    box-shadow: 0 10px 30px rgb(var(--color-foreground-rgb) / 0.08);
  }

  #shopify-section-{{ section.id }} .battle-hero__bar-fill {
    position: absolute;
    inset: 0 auto 0 0;
    width: 50%;
    background: var(--battle-sweet-bar);
    transition: width 900ms var(--ease-out-cubic, ease);
  }

  #shopify-section-{{ section.id }} .battle-hero__bar-vs {
    position: absolute;
    inset: 0;
    display: grid;
    place-items: center;
    font-size: 1.1rem;
    font-weight: 700;
    text-transform: uppercase;
    color: rgb(var(--color-foreground-rgb));
    mix-blend-mode: multiply;
  }

  #shopify-section-{{ section.id }} .battle-hero__bar-metric {
    position: absolute;
    inset: 0;
    display: grid;
    align-items: center;
    font-weight: 700;
    font-size: 1.2rem;
    letter-spacing: 0.02em;
    text-transform: uppercase;
    padding: 0 16px;
    pointer-events: none;
  }

  #shopify-section-{{ section.id }} .battle-hero__bar-metric--sweet {
    justify-items: start;
    color: #ffffff;
    text-shadow: 0 4px 12px rgb(0 0 0 / 0.25);
  }

  #shopify-section-{{ section.id }} .battle-hero__bar-metric--savoury {
    justify-items: end;
    color: #3a2f26;
    text-shadow: 0 4px 12px rgb(255 255 255 / 0.35);
  }

  #shopify-section-{{ section.id }} .battle-hero__cta-row {
    display: flex;
    justify-content: center;
    gap: 16px;
    flex-wrap: wrap;
    margin-top: 12px;
    transition: opacity 250ms ease, transform 250ms ease;
  }

  #shopify-section-{{ section.id }} .battle-hero__cta {
    min-width: min(220px, 100%);
  }

  #shopify-section-{{ section.id }} .battle-hero__lock {
    position: absolute;
    inset: 0;
    display: grid;
    place-items: center;
    background: rgb(var(--color-background-rgb) / 0.85);
    text-align: center;
    font-size: clamp(1.6rem, 4vw, 3rem);
    font-weight: 700;
    z-index: var(--layer-overlay);
  }

  #shopify-section-{{ section.id }} .battle-hero__lock[hidden] {
    display: none;
  }

  #shopify-section-{{ section.id }} .battle-hero.is-locked .battle-hero__stage {
    pointer-events: none;
    filter: grayscale(0.2);
  }

  #shopify-section-{{ section.id }} .battle-hero.is-leading-sweet .battle-hero__side--sweet::after,
  #shopify-section-{{ section.id }} .battle-hero.is-leading-savoury .battle-hero__side--savoury::after {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 30% 30%, rgb(var(--color-foreground-rgb) / 0.15), transparent 65%);
    animation: battlePulse 2.4s ease-in-out infinite;
    pointer-events: none;
  }

  #shopify-section-{{ section.id }} .battle-hero.is-loading .battle-hero__status-row,
  #shopify-section-{{ section.id }} .battle-hero.is-loading .battle-hero__scoreboard,
  #shopify-section-{{ section.id }} .battle-hero.is-loading .battle-hero__cta-row {
    opacity: 0;
    pointer-events: none;
    transform: translateY(6px);
  }

  #shopify-section-{{ section.id }} .battle-hero.is-loading .battle-hero__leader {
    opacity: 0;
  }

  @keyframes battleSpin {
    to {
      transform: rotate(360deg);
    }
  }

  @keyframes battlePulse {
    0%,
    100% {
      opacity: 0.2;
    }
    50% {
      opacity: 0.6;
    }
  }

  @media screen and (max-width: 749px) {
    #shopify-section-{{ section.id }} .battle-hero__stage {
      grid-template-columns: 1fr;
    }

    #shopify-section-{{ section.id }} .battle-hero__side {
      align-items: flex-start;
    }

    #shopify-section-{{ section.id }} .battle-hero__side--sweet {
      border-right: none;
      border-bottom: 1px solid var(--battle-border);
    }

    #shopify-section-{{ section.id }} .battle-hero__scoreboard {
      grid-template-columns: 1fr;
    }

    #shopify-section-{{ section.id }} .battle-hero__status-row {
      grid-template-columns: 1fr;
    }

    #shopify-section-{{ section.id }} .battle-hero__side-media {
      width: min(55%, 260px);
      opacity: 0.9;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    #shopify-section-{{ section.id }} .battle-hero__bar-fill {
      transition: none;
    }

    #shopify-section-{{ section.id }} .battle-hero.is-leading-sweet .battle-hero__side--sweet::after,
    #shopify-section-{{ section.id }} .battle-hero.is-leading-savoury .battle-hero__side--savoury::after {
      animation: none;
    }
  }
{% endstyle %}

<script src="{{ 'battle.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Battle hero",
  "class": "battle-hero-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Sweet vs Savoury"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Battle for the win"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "60 days - Battle for the win"
    },
    {
      "type": "text",
      "id": "sweet_label",
      "label": "Sweet label",
      "default": "Team Sweet"
    },
    {
      "type": "text",
      "id": "savoury_label",
      "label": "Savoury label",
      "default": "Team Savoury"
    },
    {
      "type": "text",
      "id": "sweet_button_label",
      "label": "Sweet button label",
      "default": "Shop Sweet Side"
    },
    {
      "type": "text",
      "id": "savoury_button_label",
      "label": "Savoury button label",
      "default": "Shop Savoury Side"
    },
    {
      "type": "image_picker",
      "id": "sweet_image",
      "label": "Sweet side image"
    },
    {
      "type": "image_picker",
      "id": "savoury_image",
      "label": "Savoury side image"
    },
    {
      "type": "url",
      "id": "sweet_link",
      "label": "Sweet link"
    },
    {
      "type": "url",
      "id": "savoury_link",
      "label": "Savoury link"
    },
    {
      "type": "text",
      "id": "end_date",
      "label": "Battle end date (ISO 8601)",
      "default": "2026-02-01T00:00:00Z"
    },
    {
      "type": "text",
      "id": "endpoint",
      "label": "Battle state endpoint",
      "default": "/battle-state.json"
    },
    {
      "type": "range",
      "id": "poll_min",
      "label": "Poll minimum (seconds)",
      "min": 10,
      "max": 30,
      "step": 1,
      "default": 12
    },
    {
      "type": "range",
      "id": "poll_max",
      "label": "Poll maximum (seconds)",
      "min": 10,
      "max": 30,
      "step": 1,
      "default": 24
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ],
  "presets": [
    {
      "name": "Battle hero"
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  }
}
{% endschema %}
