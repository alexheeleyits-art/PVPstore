  "name": "Battle hero",
  "class": "battle-hero-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Sweet vs Savoury"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Battle for the win"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "60 days - Battle for the win"
    },
    {
      "type": "text",
      "id": "sweet_label",
      "label": "Sweet label",
      "default": "Team Sweet"
    },
    {
      "type": "text",
      "id": "savoury_label",
      "label": "Savoury label",
      "default": "Team Savoury"
    },
    {
      "type": "text",
      "id": "sweet_button_label",
      "label": "Sweet button label",
      "default": "Shop Sweet Side"
    },
    {
      "type": "text",
      "id": "savoury_button_label",
      "label": "Savoury button label",
      "default": "Shop Savoury Side"
    },
    {
      "type": "url",
      "id": "sweet_link",
      "label": "Sweet link"
    },
    {
      "type": "url",
      "id": "savoury_link",
      "label": "Savoury link"
    },
    {
      "type": "text",
      "id": "end_date",
      "label": "Battle end date (ISO 8601)",
      "default": "2026-02-01T00:00:00Z"
    },
    {
      "type": "text",
      "id": "endpoint",
      "label": "Battle state endpoint",
      "default": "/battle-state.json"
    },
    {
      "type": "range",
      "id": "poll_min",
      "label": "Poll minimum (seconds)",
      "min": 10,
      "max": 30,
      "step": 1,
      "default": 12
    },
    {
      "type": "range",
      "id": "poll_max",
      "label": "Poll maximum (seconds)",
      "min": 10,
      "max": 30,
      "step": 1,
      "default": 24
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ],
  "presets": [
    {
      "name": "Battle hero"
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  }
}
{% endschema %}
