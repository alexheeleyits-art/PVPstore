<div class="bg-gray-50 py-12 border-b border-gray-200">
  <div class="max-w-7xl mx-auto px-4">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
      
      <div class="flex flex-col items-center">
        <div class="text-4xl font-black text-gray-900 mb-2">{{ section.settings.stat_1_value }}</div>
        <div class="flex items-center gap-2 text-gray-600 text-sm font-medium">
            {% render 'icon-trending-up' %} {{ section.settings.stat_1_label }}
        </div>
      </div>

      <div class="flex flex-col items-center">
        <div class="text-4xl font-black text-gray-900 mb-2 flex items-center gap-1">
            {{ section.settings.stat_2_value }} {% render 'icon-star' %}
        </div>
        <div class="text-gray-600 text-sm font-medium">{{ section.settings.stat_2_label }}</div>
      </div>

      <div class="flex flex-col items-center">
        <div class="text-4xl font-black text-gray-900 mb-2">{{ section.settings.stat_3_value }}</div>
        <div class="flex items-center gap-2 text-gray-600 text-sm font-medium">
            {% render 'icon-users' %} {{ section.settings.stat_3_label }}
        </div>
      </div>

      <div class="flex flex-col items-center">
        <div class="text-4xl font-black text-transparent bg-clip-text bg-gradient-to-r from-yellow-500 to-orange-600 mb-2">
            {{ section.settings.stat_4_value }}
        </div>
        <div class="text-gray-600 text-sm font-medium">{{ section.settings.stat_4_label }}</div>
      </div>

    </div>
  </div>
</div>

{% schema %}
{
  "name": "Social Proof Stats",
  "settings": [
    { "type": "text", "id": "stat_1_value", "label": "Stat 1 Value", "default": "1,247+" },
    { "type": "text", "id": "stat_1_label", "label": "Stat 1 Label", "default": "Items Sold" },
    { "type": "text", "id": "stat_2_value", "label": "Stat 2 Value", "default": "4.9" },
    { "type": "text", "id": "stat_2_label", "label": "Stat 2 Label", "default": "Average Rating" },
    { "type": "text", "id": "stat_3_value", "label": "Stat 3 Value", "default": "247" },
    { "type": "text", "id": "stat_3_label", "label": "Stat 3 Label", "default": "Live Shoppers" },
    { "type": "text", "id": "stat_4_value", "label": "Stat 4 Value", "default": "20% OFF" },
    { "type": "text", "id": "stat_4_label", "label": "Stat 4 Label", "default": "For Winning Team" }
  ],
  "presets": [
    {
      "name": "Social Proof Stats"
    }
  ]
}
{% endschema %}
