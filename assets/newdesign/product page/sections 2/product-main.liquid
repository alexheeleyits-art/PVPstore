  "name": "Battle Product Page",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_badge",
      "label": "Show Team Badge",
      "default": true
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
